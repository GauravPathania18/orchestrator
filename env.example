# Environment Configuration for Personal LLM RAG System

# Backend Service Configuration
FASTAPI_ENV=development
LOG_LEVEL=INFO

# Service URLs (for inter-service communication)
EMBEDDING_SERVICE_URL=http://localhost:8000
VECTOR_SERVICE_URL=http://localhost:8003
VECTOR_STORAGE_URL=http://localhost:8003
EMBEDDER_URL=http://127.0.0.1:8000/embed

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b

# Embedder Service Configuration
EMBEDDING_MODE=local
LOCAL_MODEL=all-mpnet-base-v2
DEVICE=cpu
HTML_STRIP=true
NORMALIZE=true

# Vector Storage Configuration
PERSIST_DIR=./chroma_store
COLLECTION_NAME=personal_llm

# Session Configuration (in minutes)
SESSION_TIMEOUT_MINUTES=60

# Service Ports (for local development)
EMBEDDER_PORT=8000
VECTOR_PORT=8003
BACKEND_PORT=8002
